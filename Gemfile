  gem 'kramdown-math-katex'
  gem 'jekyll-redirect-from'
  gem 'jekyll-minifier'
  gem 'jekyll-analytics'
  gem 'jekyll-avatar'
  gem 'jekyll-assets'
  gem 'jekyll-archives'
end

